<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lazyload.mapper.UserMapper">
    <resultMap id="userAccountMap" type="com.lazyload.pojo.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="birthday" column="birthday"/>
        <result property="sex" column="sex"/>
        <result property="address" column="address"/>
        <collection property="accountList" ofType="com.lazyload.pojo.Account" column="id"
                    select="com.lazyload.mapper.UserMapper.findAllByUid"/>
    </resultMap>
    <select id="findAllby" resultMap="userAccountMap">
        SELECT * FROM USER;
    </select>

    <select id="findAllByUid" resultType="com.lazyload.pojo.Account">
        SELECT * FROM account WHERE uid = #{uid};
    </select>
</mapper>